modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cmake", "freetype", "glibcLocales", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Live Attendance System"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mobile API Server"

[[workflows.workflow]]
name = "Live Attendance System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_live.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Mobile API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python mobile_api.py"
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
